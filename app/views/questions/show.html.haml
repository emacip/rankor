- markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML, autolink: true, tables: true)

%h2= @question.title
%p= markdown.render(@question.body).html_safe

%br
%h2="total answers #{@question.answers.count}"
%ul.list-group
  - @question.answers.each do |answer|
    %li.list-group-item
      =  markdown.render(answer.body).html_safe


= link_to 'New Answer', new_question_answer_path(question_id: @question.id)

